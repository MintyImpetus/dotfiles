#!/bin/sh
GITREPOS="$HOME/Documents/
$HOME/Coding/git/mico
$HOME/Coding/git/minsa
$HOME/Coding/git/miler
$HOME/Coding/git/villsim
$HOME/Coding/git/dotfiles"

output="$(echo "$GITREPOS" | while read repo; do
	cd "$repo" 2>/dev/null
	if [ "$(git status 2>/dev/null | grep committed)" ]; then
		w=w
	else if [ "$(git status 2>/dev/null | grep ahead)" ]; then
		printf "$repo: "
		echo "	push"
	else if [ "$(git status 2>/dev/null | grep nothing)" ]; then
		printf "$repo: "
		echo "	clean"
	else
		printf "$repo: "
		echo "	unknown"
	fi
	fi
	fi
done)"
[ "$(echo "$output" | grep -v clean)" ] && echo "$output" | column -t || echo "All clean!"
