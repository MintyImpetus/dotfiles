#!/bin/sh
GITREPOS="$HOME/Documents/
$HOME/Coding/git/mico
$HOME/Coding/git/minsa
$HOME/Coding/git/miler
$HOME/Coding/git/villsim
$HOME/Coding/git/dotfiles"

echo "$GITREPOS" | while read repo; do
	printf "$repo: "
	cd "$repo"
	if [ "$(git status | grep committed)" ]; then
		echo "	commit"
	else
	if [ "$(git status | grep ahead)" ]; then
		echo "	push"
	else
	if [ "$(git status | grep nothing)" ]; then
		echo "	clean"
	else
		echo "	unknown"
	fi
	fi
	fi
done | column -t
